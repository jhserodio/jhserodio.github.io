---
import backgroundImage  from '../assets/wallpaper-discord.jpeg';
import { Template } from '../components/template'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<style define:vars={{ backgroundImage: `url(${backgroundImage.src})` }}>
		:root {
      --background-image: var(--backgroundImage);
      
			/* colors */
      --primary: #5865f2;
      --primary-dark: #292F73;
      --primary-light: #A1A8F4;

      --secondary: #E7366B;
      --secondary-dark: #691830;
      --secondary-light: #EC7D9E;

      --gray-50: #fafafa;
      --gray-100: #f5f5f5;
      --gray-200: #eeeeee;
      --gray-300: #e0e0e0;
      --gray-400: #bdbdbd;
      --gray-500: #9e9e9e;
      --gray-600: #757575;
      --gray-700: #616161;
      --gray-800: #424242;
      --gray-900: #212121;

      --white: #fff;
      --white-100: rgba(255,255,255,0.1);
      --white-200: rgba(255,255,255,0.2);
      --white-400: rgba(255,255,255,0.4);
      --white-600: rgba(255,255,255,0.6);
      --black: #000;
      --black-200: rgba(0,0,0,0.2);
      --black-400: rgba(0,0,0,0.4);
      --black-600: rgba(0,0,0,0.6);

      /* measures */
      --zero: 0;
      --space: 0.5rem;
      --space-sm: 0.125rem;
      --space-lg: 1.25rem;

      --radius: 0.5rem;
      --radius-sm: 0.25rem;
      --radius-lg: 1rem;

      /* template */
      --container-width: 80rem;
		}

		body, div, header, main, section, footer {
			display: block;
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

	</style>
	<body>
		<Template>
			<slot />
		</Template>
	</body>
</html>
