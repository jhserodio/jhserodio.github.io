---
import GuildCard from '../layouts/GuildCard.astro'
import {
  ME_EMAIL,
  ME_GITHUB,
  ME_LINKEDIN
} from '../helpers/constants';
import { meEn } from '../i18n/me/en';

---
<GuildCard>
  <style>
    .content {
      --width: 280px;


      padding: calc(var(--space-lg)*4) 0;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .me {
      padding: var(--space-lg) 0;
      max-width: var(--width)
    }

    .me p {
      text-align: left;
    }

    .list {
      list-style: none;
      padding: 0;
      width: var(--width);
    }

    .item {
      margin: var(--space) 0;
    }

    .link {
      text-decoration: none;
      width: var(--width);
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid var(--primary);
      color: var(--primary-light);
      transition: all ease .2s;
    }

    .link:hover {
      background: var(--primary-lightest);
      border-color: var(--primary-darkest);
      color: var(--primary-darkest);
    }

  </style>

	<div class="content">
     <div class="me">
        <h2 class="title">See my pages and contacts</h2>
     </div>
     <ul class="list">
      <li class="item"><a class="link" href="/serodio.github.io/resume">Resume</a></li>
      <li class="item"><a class="link" href="/serodio.github.io/cover-letter">Cover Letter</a></li>
      <!-- <li class="item"><a class="link" href="/news">Blog</a></li> -->
      <li class="item"><a class="link" href={ME_LINKEDIN} target="_blank">Linkedin</a></li>
      <li class="item"><a class="link" href={ME_GITHUB} target="_blank">Github</a></li>
      <li class="item"><a class="link" href={`mailto:${ME_EMAIL}`} target="_blank">{ME_EMAIL}</a></li>
     </ul>
  </div>
</GuildCard>
